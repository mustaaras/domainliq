// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String
  subdomain     String    @unique
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  domains       Domain[]

  // Contact Info
  contactEmail    String?
  twitterHandle   String?
  whatsappNumber  String?
  linkedinProfile String?
  telegramUsername String?
  preferredContact String @default("email") // email, twitter, whatsapp, linkedin, telegram
  
  // Verification
  verificationToken String? @unique

  // Password Reset
  passwordResetToken   String?   @unique
  passwordResetExpires DateTime?

  // Integrations
  escrowEmail       String?
  escrowTermsAccepted Boolean @default(false)

  // Stripe Connect
  stripeConnectedAccountId  String?   @unique
  stripeOnboardingComplete  Boolean   @default(false)

  // Orders (as seller)
  orders            Order[]

  // Status
  lastSeen          DateTime  @default(now())

  // Chat
  // Chat
  chatSessions      ChatSession[]
  
  // Stats
  profileViews      Int       @default(0)
  profileViewEvents ProfileView[]

  // Portfolios
  portfolios        Portfolio[]

  @@index([stripeConnectedAccountId])
}

model Domain {
  id          String   @id @default(cuid())
  name        String
  price       Float
  status      String   @default("available") // available, sold
  description String?
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  views       Int      @default(0)
  viewEvents  DomainView[]

  // Content
  content     String?  @db.Text
  aiGenerated Boolean  @default(false)

  // Verification
  isVerified        Boolean   @default(false)
  verificationToken String?   @unique
  verificationMethod String?  // 'txt', 'a', 'ns', null
  verifiedAt        DateTime?
  expiresAt         DateTime?

  // Sales
  checkoutLink      String?
  orders            Order[]

  // Chat
  chatSessions      ChatSession[]
  
  // Portfolios (many-to-many)
  portfolios        Portfolio[]

  @@index([userId])
}

model Portfolio {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Float?
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  domains     Domain[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
}

model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String   @db.Text
  createdAt DateTime @default(now())
  read      Boolean  @default(false)
}

model ReservedSubdomain {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
}

model ChatSession {
  id        String   @id @default(cuid())
  domainId  String?
  domain    Domain?  @relation(fields: [domainId], references: [id], onDelete: Cascade)
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  visitorId String   // Fingerprint or cookie ID, or 'ADMIN'
  visitorName String?
  visitorEmail String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  messages  ChatMessage[]
  
  @@index([domainId])
  @@index([userId])
  @@index([visitorId])
}

model ChatMessage {
  id        String   @id @default(cuid())
  sessionId String
  session   ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  sender    String   // 'visitor' | 'seller'
  content   String   @db.Text
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  
  @@index([sessionId])
}

model DomainView {
  id        String   @id @default(cuid())
  domainId  String
  domain    Domain   @relation(fields: [domainId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([domainId])
  @@index([createdAt])
}

model ProfileView {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
}

model Order {
  id                     String   @id @default(cuid())
  
  // Domain being sold
  domainId               String
  domain                 Domain   @relation(fields: [domainId], references: [id])
  
  // Buyer info (no account required)
  buyerEmail             String
  buyerName              String?
  buyerConfirmationToken String   @unique @default(cuid())
  
  // Seller
  sellerId               String
  seller                 User     @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  
  // Amounts (in cents)
  amount                 Int
  platformFee            Int
  currency               String   @default("usd")
  
  // Stripe references
  stripePaymentIntentId  String?  @unique
  stripeCheckoutSessionId String? @unique
  stripeTransferId       String?
  
  // Transfer Details
  authCode               String? // EPP / Auth code for domain transfer
  
  // Status: pending → paid → transferred → completed | refunded
  status                 String   @default("pending")
  
  // Timestamps
  paidAt                 DateTime?
  transferredAt          DateTime?
  completedAt            DateTime?
  autoReleaseAt          DateTime?
  
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
  
  @@index([sellerId])
  @@index([domainId])
  @@index([status])
  @@index([buyerEmail])
}
