{
    on_demand_tls {
        ask http://app:3000/api/domain/verify
        interval 2m
        burst 5
    }
}

:443, :80 {
    tls {
        on_demand
    }

    reverse_proxy app:3000 {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-Proto {scheme}
    }
}
